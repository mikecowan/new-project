extends _page.jade
block title
  title animator

block content
  h1 animations

  div#redbox.box
  div#bluebox.box

  div#holder
    div#greenbox.box2
    div#whitebox.box2
    div#blackbox.box2

  style.
    .box {
      width: 50px;
      height: 50px;
      position: relative;
    }
    #redbox {background-color:red;}
    #bluebox {background-color:blue;}

    #holder {
      position: relative;
      height: 100px;
      padding: 20px;
      width: 400px;
      border: 1px solid;
    }
    .box2 {
      position: absolute;
    }
    #greenbox {
      background-color: green;
      height: 50px;
      width: 50px;
      z-index: 3;
    }
    #whitebox {
      background-color: white;
      z-index: 2;
      height: 50px;
      width: 0px;
      left: 70px;
    }
    #blackbox {
      background-color: black;
      height: 20px;
      width: 200px;
      left: 70px;
      top: 30px;
      z-index: 1;
    }
  script.
    $("#redbox").click(function() {
      $(this).animate({left: "+50px", top: "+50px"}, 1000)
    })

    $("#bluebox").click(function() {
      $(this).animate({left: "+50px"}, 1000).animate({top: "-50px"}, 1000)
    })

    $(document).ready(function() {
      $("#whitebox").animate({width: "200px"}, 3000);
      $("#greenbox").animate({left: "250px"}, 3000);
    })